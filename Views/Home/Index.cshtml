@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TSach>





<style>

    .product-item {
        height: 100%; /* Đảm bảo tất cả các sản phẩm chiếm toàn bộ chiều cao của khối cha */
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Đảm bảo nội dung bên trong cách đều nhau */
    }

    .product-img {
        height: 250px; /* Đặt chiều cao cố định cho phần chứa hình ảnh */
        overflow: hidden; /* Ẩn phần tràn ra ngoài */
    }

        .product-img img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Đảm bảo hình ảnh vừa khung mà không bị méo */
        }

    .product-info {
        padding: 15px;
        background-color: #fff;
        flex-grow: 1; /* Đảm bảo phần mô tả sản phẩm chiếm hết khoảng trống còn lại */
        text-align: center;
    }

    .product-info__name {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
        display: block;
        text-decoration: none;
        color: #333;
    }

    .product-info h5, .product-info h6 {
        margin: 5px 0;
        font-size: 18px;
    }

    .product-action {
        text-align: center;
    }

        .product-action a {
            margin: 5px;
        }

    .d-flex {
        display: flex;
    }

        .d-flex.align-items-center {
            align-items: center;
        }

        .d-flex.justify-content-center {
            justify-content: center;
        }

    .text-muted {
        color: #6c757d !important;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-decoration-line-through {
        text-decoration: line-through;
    }


</style>


@foreach(var item in Model)
{


    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <div class="product-item bg-light mb-4">
            <div class="product-img">
                <img class="w-100" src="@Url.Content("../ProductImages/Sach/"+item.FileAnh)">
                <div class="product-action">
                    <a class="btn btn-outline-dark btn-square rounded-0" href="#"><i class="fa fa-shopping-cart"></i></a>
                    <a class="btn btn-outline-dark btn-square rounded-0" href="#"><i class="far fa-heart"></i></a>
                </div>
            </div>
            <div class="text-center py-4 product-info">
                <a class="product-info__name" href="#">@item.TenSach</a>
                <div class="d-flex align-items-center justify-content-center mt-2">
                    <h5>@item.GiaTriSach</h5>
                    <h6 class="text-muted ms-2 text-decoration-line-through">@item.GiaTriSach</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center mb-1">
                    <small class="fa fa-star text-primary me-1"></small>
                    <small class="fa fa-star text-primary me-1"></small>
                    <small class="fa fa-star text-primary me-1"></small>
                    <small class="fa fa-star text-primary me-1"></small>
                    <small class="fa fa-star text-primary me-1"></small>
                    <small>(99)</small>
                </div>
            </div>
        </div>
    </div>

}

<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>